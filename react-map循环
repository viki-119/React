<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>jsx-style/component-lifecycle</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/react/0.13.3/react.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/react/0.13.3/JSXTransformer.js"></script>
    <style type="text/css">
        .alert-xx{
            font-size:44px;
        }
    </style>
</head>
<body>
<div id="container"></div>
<!--
['h','e','l','l','o']
[{key:'h',value:'e'},{key:'w',value:'s'}]
{key:'value',sss:'sss'}
-->
<script type="text/jsx">
    var Hello=React.createClass({
        render: function(){

            var option=[];
            var data={key:'value',sss:'sss'};
            for(key in data){
                option.push(<option value={key}>{data[key]}</option>);
            };

            var $hello = ['h','e','l','l','o'].map(function(str){
                return (<span>{str}</span>);
            });

            var $nodes = [{key:'h',value:'e'},{key:'w',value:'s'}].map(function(str){
                return (<span>{str.key}{str.value}</span>);
            });

            return (
                <div>
                    <div className="custom-component">{$nodes}</div>
                    <div>{$hello}</div>
                    <select>{option}</select>
                </div>
            );
        }
    });
    React.render(<Hello/>,document.getElementById("container"));
</script>
</body>
</html>
